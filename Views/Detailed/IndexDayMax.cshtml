                                        symbol: 'circle',
                                        symbolSize: 5,
                                        label: {
                                            show: false
                                        },
                                        emphasis: {
                                            label: {
                                                show: false
                                            }
                                        }
                                    }
                                ],

                            ]
                        }*/
                }],                                             
                dataZoom: [
                    {   // 这个dataZoom组件，默认控制x轴。
                        type: 'slider', // 这个 dataZoom 组件是 slider 型 dataZoom 组件
                        start: 0,      // 左边在 10% 的位置。
                        end: 50       // 右边在 60% 的位置。
                    },
                ]
            };
            myChart.setOption(option);


        }



